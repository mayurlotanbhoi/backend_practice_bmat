// tsconfig.json
{
  "compilerOptions": {
    "typeRoots": ["./src/types", "./node_modules/@types"],
     "target": "ES2022",
    "module": "nodenext",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts"
, "src/websocket/sendNotification.js"  ],
  "exclude": [
    "node_modules"
  ],
  "ts-node": { 
    "esm": true,
    "experimentalSpecifierResolution": "node" 
  }
}